{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es5",
            "es2015",
            "es2017",
            "dom",
            "scripthost"
        ],
        "module": "commonjs",
        "experimentalDecorators": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "removeComments": false,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "baseUrl": "./src/",
        "paths": {
            "app-modules/*": [ "modules/*" ],
            "app-components/*": [ "components/*" ],
            "app-services/*": [ "services/*" ],
            "app-images/*": [ "images/*" ],
            "app-icons/*": [ "icons/*" ],
            "app-fonts/*": [ "fonts/*" ]
        }
    }        
}